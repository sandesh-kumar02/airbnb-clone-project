<% if (success && success.length) {%>

<div
  class="alert alert-success alert-dismissible fade show col-12 col-md-6"
  role="alert"
>
  <%= success %>
  <button
    type="button"
    class="btn-close"
    data-bs-dismiss="alert"
    aria-label="Close"
  ></button>
</div>

<%} %> <% if (errors && errors.length) {%>

<div
  class="alert alert-danger alert-dismissible fade show col-12 col-md-6"
  role="alert"
>
  <%= errors %>
  <button
    type="button"
    class="btn-close"
    data-bs-dismiss="alert"
    aria-label="Close"
  ></button>
</div>
<%} %>
