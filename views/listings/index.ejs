<% layout('/layouts/boilerplate.ejs') %>
<body class="listings-page">
  <div class="container py-5">
    <h1 class="text-center mb-5 fw-bold text-dark">üåç Explore All Listings</h1>
    <div class="row g-4">
      <% for (const listing of alllistings) { %>
      <div class="col-md-4 col-sm-6">
        <a href="/listings/<%= listing._id %>" class="text-decoration-none">
          <div class="card listing-card shadow-sm">
            <div class="card-img-wrapper">
              <img
                src="<%= listing.image.url %>"
                class="card-img-top"
                alt="listing-image"
              />
            </div>
            <div class="card-body">
              <h5 class="card-title text-dark"><%= listing.title %></h5>
              <p class="card-text text-muted">
                &#8377; <%= listing.price %> / night
              </p>
            </div>
          </div>
        </a>
      </div>
      <% } %>
    </div>
  </div>
</body>

