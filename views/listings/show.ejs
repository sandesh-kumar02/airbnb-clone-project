<% layout('layouts/boilerplate') %> <% title = 'Listing Details' %> <% bodyClass
= 'show-listing-page' %>

<div class="container py-5">
  <div class="mx-auto" style="max-width: 720px">
    <!-- Card -->
    <div class="card shadow-lg rounded-4">
      <!-- Image -->
      <img
        src="<%= showListing.image.url %>"
        class="card-img-top"
        alt="listing image"
      />

      <!-- Card body -->
      <div class="card-body">
        <h3 class="card-title mb-3"><%= showListing.title %></h3>
        <i>Owned By <%= showListing.owner.username %></i>
        <p class="card-text text-muted"><%= showListing.description %></p>
        <p class="card-text fw-bold">
          &#8377; <%= showListing.price.toLocaleString('en-IN') %> / night
        </p>
        <p class="card-text">
          <i class="fa-solid fa-location-dot"></i> <%= showListing.location %>,
          <%= showListing.country %>
        </p>
      </div>

      <!-- Card footer -->
      <% if (currUser && showListing.owner._id.equals(currUser._id)) {%>

      <div class="card-footer d-flex justify-content-between">
        <a href="/listings/<%= showListing._id %>/edit" class="btn btn-warning"
          >âœï¸ Edit</a
        >
        <form
          action="/listings/<%= showListing._id %>?_method=DELETE"
          method="POST"
        >
          <button class="btn btn-danger">ğŸ—‘ Delete</button>
        </form>
      </div>
      <% } %>
    </div>
  </div>
</div>

<!-- Reviews Section -->

<div class="mt-5">
  <hr />
  <% if (currUser) {%>
  <h4 class="mb-4">Leave a Review</h4>
  <form
    action="/listings/<%= showListing._id %>/reviews"
    class="needs-validation"
    novalidate
    method="POST"
  >
   
      <div class="form-text">Rate from 1 (worst) to 5 (best)</div>
    </div>
    <div class="mb-3 mt-3">
      <label for="rating" class="form-label fw-semibold">Rating</label>
    <fieldset class="starability-slot">
      <legend>First rating:</legend>
      <input
        type="radio"
        id="no-rate"
        class="input-no-rate"
        name="review[rating]"
        value="1"
        checked
        aria-label="No rating."
      />
      <input type="radio" id="first-rate1" name="review[rating]" value="1" />
      <label for="first-rate1" title="Terrible">1 star</label>
      <input type="radio" id="first-rate2" name="review[rating]" value="2" />
      <label for="first-rate2" title="Not good">2 stars</label>
      <input type="radio" id="first-rate3" name="review[rating]" value="3" />
      <label for="first-rate3" title="Average">3 stars</label>
      <input type="radio" id="first-rate4" name="review[rating]" value="4" />
      <label for="first-rate4" title="Very good">4 stars</label>
      <input type="radio" id="first-rate5" name="review[rating]" value="5" />
      <label for="first-rate5" title="Amazing">5 stars</label>
    </fieldset>
</div>


    <div class="mb-3">
      <label for="comment" class="form-label fw-semibold">Comment</label>
      <textarea
        name="review[comment]"
        id="comment"
        rows="4"
        class="form-control"
        placeholder="Write your review here..."
        required
      ></textarea>
      <div class="invalid-feedback">âš ï¸ Comment cannot be empty.</div>
    </div>

    <div class="d-grid">
      <button type="submit" class="btn btn-primary btn-lg rounded-3">
        ğŸ’¬ Submit Review
      </button>
    </div>
  </form>
  <% } %>
  <hr />
  <h4 class="mb-4">Show Reviews</h4>
  <div class="list-group">
    <% if (showListing.reviews.length === 0) { %>
    <p class="text-muted fst-italic">No reviews yet. Be the first to review!</p>
    <% } else { %> <% for (const review of showListing.reviews) { %>
    <div
      class="list-group-item list-group-item-action shadow-sm mb-3 rounded-3"
    >
      <h5>@<%= review.author.username %></h5>
       <p class="starability-result" data-rating="<%= review.rating %>">
  </p>
      <div class="d-flex justify-content-between align-items-center mb-2">
        <span class="fw-semibold">â­ Rating: <%= review.rating %>/5</span>
        <small class="text-muted"
          ><i class="fa-regular fa-clock"></i> just now</small
        >
      </div>
      <p class="mb-1"><%= review.comment %></p>
      <form
        action="/listing/<%=showListing._id%>/reviews/<%= review._id %>?_method=DELETE"
        method="post"
      >
        <button class="btn">delete</button>
      </form>
    </div>
    <% } %> <% } %>
  </div>
</div>
