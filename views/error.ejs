<% layout('layouts/boilerplate') %>

<div
  class="d-flex flex-column align-items-center justify-content-center"
  style="height: 80vh; text-align: center"
>
  <!-- Status Code -->
  <h1 style="font-size: 6rem; font-weight: 700; color: #dc3545">
    <%= statusCode %>
  </h1>

  <!-- Message -->
  <h2 style="margin-bottom: 20px; font-weight: 500; color: #333">
    <%= message %>
  </h2>

  <!-- Illustration -->
  <img
    src="/image/error-image.png"
    alt="Error Illustration"
    style="max-width: 300px; margin-bottom: 20px"
  />

  <!-- Buttons -->
  <div>
    <a href="/" class="btn btn-primary btn-lg me-2">🏠 Go Home</a>
    <a href="javascript:history.back()" class="btn btn-outline-secondary btn-lg"
      >⬅️ Go Back</a
    >
  </div>
</div>
